<%- content_for(:script) do -%>
  <%= javascript_include_tag 'raphael-min', 
        'raphael_plugins/raphael.path.methods',
        'analytics'
  %>
<style type="text/css" media="screen">
  /* A font by Jos Buivenga (exljbris) -> www.exljbris.nl */
  @font-face {
        font-family: "Fontin-Sans";
        src: url(fontin-sans.otf) format("opentype");
  }
  body {
      background: #000 url(images/black.png);
      color: #fff;
      font: 300 100.1% Fontin-Sans, "Gill Sans", Calibri, "Trebuchet MS", sans-serif;
  }
  #holder {
/*      height: 480px;*/
      left: -100px;
/*      margin: -240px 0 0 -320px;*/
      position: relative;
/*      top: 50%;*/
      width: 100%;
  }
  #copy {
      bottom: 0;
      font: 300 .7em Fontin-Sans, "Gill Sans", Calibri, "Trebuchet MS", sans-serif;
      position: absolute;
      right: 1em;
      text-align: right;
  }
  #copy a {
      color: #000;
  }
</style>

<%- end -%>

<%= link_to 'Edit', edit_player_path(@player) %> |
<%= link_to 'Back', players_path %>
<br /><br />
<h2>Allgemeine Statistiken</h2>
<br />
<table border="0" cellspacing="5" cellpadding="5">
  <tr>
    <td>Gewonnene Spiele</td>
    <td><%= @player.all_winning_games.size %></td>
  </tr>
  <tr>
    <td>Gewonnene Matches</td>
    <td><%= @player.all_winning_matches.size %></td>
  </tr>
  <tr>
    <td>Verlorene Spiele</td>
    <td><%= @player.all_lost_games.size %></td>
  </tr>
  <tr>
    <td>Verlorene Matches</td>
    <td><%= @player.all_lost_matches.size %></td>
  </tr>
  <tr>
    <td>Geschossene Tore</td>
    <td><%= @player.goals_shot %></td>
  </tr>
  <tr>
    <td>Kassierte Tore</td>
    <td><%= @player.sucked_goals %></td>
  </tr>
  <tr>
    <td>Torverhältnis</td>
    <td><%= show_goals_ratio(@player.goals_ratio) %></td>
  </tr>
  
  
</table>
<br />
<br />
<h2>Wöchentliche Statistiken für <%=h @player.username %></h2>

<table id="data">
  <tfoot>
    <tr>
      <%- @player.weekly_statistics.each do |statistic| -%>
        <th><%= statistic.date.to_date.cweek %></th>
      <%- end -%>
    </tr>
  </tfoot>
  <tbody>
    <tr>
      <%- @player.weekly_statistics.each do |statistic| -%>
        <td><%= statistic.value %></td>
      <%- end -%>
    </tr>
  </tbody>
</table>

<div id="holder"></div>

