<h1>Listing players</h1>

<table>
  <tr>
    <th>Username</th>
    <th>Name</th>
    <th>Total wins</th>
    <th>Single wins</th>
    <th>Double wins</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @players.each do |player| %>
  <tr>
    <td><%=h player.username %></td>
    <td><%=h player.full_name %></td>
    <td><%=h player.wins(-1) %></td>
    <td><%=h player.wins(1) %></td>
    <td><%=h player.wins(2) %></td>
    <td><%= link_to 'Show', player %></td>
    <td><%= link_to 'Edit', edit_player_path(player) %></td>
    <td><%= link_to 'Destroy', player, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

