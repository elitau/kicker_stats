<h2>Listing games</h2>

<table class="full">
  <tr>
    <th>ID</th>
    <th>Best of</th>
    <th>Winner</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%= link_to game.id, game_matches_path(game) %></td>
    <td><%=h game.best_of %></td>
    <td><%=h game.winner() %></td>
    <td><%= link_to 'Edit', edit_game_path(game) %></td>
    <td><%= link_to 'Destroy', game, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

